{
  "env": {
    "browser": true
  },
  "globals": {
    "angular": true
  },
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "accessor-pairs": 2,  

    "brace-style": [2, "1tbs", { "allowSingleLine": true }],  
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-infix-ops": 2,
    "array-bracket-spacing": [2, "never"], 
    "dot-notation": [2, {"allowKeywords": true}],  

  }
}